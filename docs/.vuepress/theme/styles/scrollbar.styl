*::-webkit-scrollbar {
  /* 滚动条整体样式 */
  width: 5px; /* 高宽分别对应横竖滚动条的尺寸 */
  height: 1px;
}

*::-webkit-scrollbar-thumb {
  background: $scrollbar-thumb-bg-color;

  /* 滚动条里面小方块 */
  border-radius: 5px;
  box-shadow: inset 0 0 5px $scrollbar-shadow-bg-color;
}

*::-webkit-scrollbar-track {
  background: $scrollbar-track-bg-color;
  border-radius: 5px;

  /* 滚动条里面轨道 */
  box-shadow: inset 0 0 5px $scrollbar-shadow-bg-color;
}
